{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 550,
  "height": 400,
  "title": "GDP per capita against Inflationrate  and Unemployment in 2019",
  "data": {
    "url": "https://raw.githubusercontent.com/daikidev111/FIT3179-Assignment2/main/Cleaned_Datasets/economics_improved.csv"
  },
  "params": [
  ],
  "transform": [
    {"filter": "datum['2019_GDP'] > 0"},
    {"filter": "datum['2019_UNEMP'] > 0"},
    {"filter": "datum['2019_INF'] > 0"}
  ],
  "encoding": {
    "x": {
      "field": "2019_UNEMP",
      "type": "quantitative",
      "title": "Unemployment rate in 2019",
      "axis": {"tickCount": 7},
      "scale": {"type": "linear", "domain": [0, 15]}
    },
    "y": {
      "field": "2019_INF",
      "type": "quantitative",
      "title": "Inflation rate in 2019",
      "axis": {"tickCount": 6},
      "scale": {"type": "linear", "domain": [0, 10]}
    },
    "color": {
      "field": "country",
      "type": "nominal",
      "legend": null,
      "scale": {"scheme": "tableau20"}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "2019_GDP",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000, 5000, 10000, 30000, 50000, 70000],
            "range": [50, 125, 250, 500, 750, 1000, 1250]
          },
          "legend": {"format": ".1f"}
        },
        "tooltip": [
          {
            "field": "country", 
            "title": "Country", 
            "type": "nominal"
          },
          {
            "field": "2019_GDP",
            "title": "GDP per capita (2019)",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "2019_INF", 
            "title": "Inflation rate (2019)", 
            "type": "quantitative", 
            "format": ","
          },
          {
            "field": "2019_UNEMP",
            "type": "quantitative",
            "title": "Unemployment Rate (2019)",
            "format": ","
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 20,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "country", 
          "type": "nominal"
        },
        "color": {
          "value": "black"
        },
        "opacity": {
          "condition": {
            "test": "datum['country'] == 'France' || datum['country'] == 'Japan' || datum['country'] == 'New Zealand' || datum['country'] == 'South Africa'",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "transform": [
        {
          "filter": "datum['country'] == 'Russian Federation'"
        },
        {
          "calculate": "'The Highest Inflation Rate is ' + datum['2019_INF'] + '%'", 
          "as": "text_annotation"
        },
        {
          "calculate": "split(datum.text_annotation, ':')", 
          "as": "text"
        }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 30,
        "fontSize": 14,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "text"}
      }
    }
  ],
  "config": {
    "title": {
      "font": "sans-serif", 
      "fontSize": 14
    }
  }
}